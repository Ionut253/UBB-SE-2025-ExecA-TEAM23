<Page
    x:Class="Hospital.Views.RecommendationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <StackPanel Spacing="10" HorizontalAlignment="Center">

            <TextBlock Text="Select Symptoms" FontSize="20" FontWeight="Bold" />

            <!-- Bind ComboBoxes to SymptomOptions -->
            <ComboBox ItemsSource="{Binding SymptomOptions}" SelectedItem="{Binding SelectedSymptom1}" PlaceholderText="Select Symptom 1"/>
            <ComboBox ItemsSource="{Binding SymptomOptions}" SelectedItem="{Binding SelectedSymptom2}" PlaceholderText="Select Symptom 2"/>
            <ComboBox ItemsSource="{Binding SymptomOptions}" SelectedItem="{Binding SelectedSymptom3}" PlaceholderText="Select Symptom 3"/>
            <ComboBox ItemsSource="{Binding SymptomOptions}" SelectedItem="{Binding SelectedSymptom4}" PlaceholderText="Select Symptom 4"/>
            <ComboBox ItemsSource="{Binding SymptomOptions}" SelectedItem="{Binding SelectedSymptom5}" PlaceholderText="Select Symptom 5"/>

            <!-- Recommend Button -->
            <Button Content="Get Recommendation" Click="RecommendButton_Click" />

            <!-- Recommended Doctor -->
            <TextBlock x:Name="ResultTextBlock" Text="" FontSize="16" Foreground="Green" Visibility="Collapsed"/>

        </StackPanel>
    </Grid>
</Page>
