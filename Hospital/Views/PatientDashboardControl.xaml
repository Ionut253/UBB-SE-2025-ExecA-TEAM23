<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Hospital.Views.PatientDashboardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Padding="20" Background="Black">
        <!-- Name -->
        <TextBlock Text="Name" />
        <TextBox Text="{Binding Name, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Email -->
        <TextBlock Text="Email" />
        <TextBox Text="{Binding Email, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Username -->
        <TextBlock Text="Username" />
        <TextBox Text="{Binding Username, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Address -->
        <TextBlock Text="Address" />
        <TextBox Text="{Binding Address, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Phone Number -->
        <TextBlock Text="Phone Number" />
        <TextBox Text="{Binding PhoneNumber, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Emergency Contact -->
        <TextBlock Text="Emergency Contact" />
        <TextBox Text="{Binding EmergencyContact, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Birth Date -->
        <TextBlock Text="Birth Date" />
        <DatePicker Date="{Binding BirthDate, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Weight -->
        <TextBlock Text="Weight" />
        <TextBox Text="{Binding Weight, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Height -->
        <TextBlock Text="Height" />
        <TextBox Text="{Binding Height, Mode=TwoWay}" Width="300" Margin="0,10"/>

        <!-- Update Button -->
        <Button Content="Update Patient Info" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="OnUpdateButtonClick" 
                Margin="0,20"/>
    </StackPanel>
</UserControl>
