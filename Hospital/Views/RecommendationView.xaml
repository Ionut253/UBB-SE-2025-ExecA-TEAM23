<Page
    x:Class="Hospital.Views.RecommendationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="20">
        <StackPanel Spacing="10" HorizontalAlignment="Center">
            <TextBlock Text="Select Symptoms" FontSize="20" FontWeight="Bold" />

            <ComboBox ItemsSource="{Binding SymptomStartOptions}"
                      SelectedItem="{Binding SelectedSymptomStart, Mode=TwoWay}"
                      PlaceholderText="When did the symptoms start?" />

            <ComboBox ItemsSource="{Binding DiscomfortAreaOptions}"
                      SelectedItem="{Binding SelectedDiscomfortArea, Mode=TwoWay}"
                      PlaceholderText="Affected body area" />

            <ComboBox ItemsSource="{Binding SymptomTypeOptions}"
                      SelectedItem="{Binding SelectedSymptomPrimary, Mode=TwoWay}"
                      PlaceholderText="Primary symptom" />

            <ComboBox ItemsSource="{Binding SymptomTypeOptions}"
                      SelectedItem="{Binding SelectedSymptomSecondary, Mode=TwoWay}"
                      PlaceholderText="Secondary symptom" />

            <ComboBox ItemsSource="{Binding SymptomTypeOptions}"
                      SelectedItem="{Binding SelectedSymptomTertiary, Mode=TwoWay}"
                      PlaceholderText="Tertiary symptom" />

            <Button x:Name="RecommendButton"
                    Content="Find Matching Doctor"
                    Click="OnRecommendButtonClick" />

            <StackPanel x:Name="ResultPanel" Visibility="Collapsed" Spacing="5">
                <TextBlock x:Name="DoctorNameText" FontSize="16" FontWeight="SemiBold"/>
                <TextBlock x:Name="DepartmentText" FontSize="14"/>
                <TextBlock x:Name="RatingText" FontSize="14" Foreground="Green"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
