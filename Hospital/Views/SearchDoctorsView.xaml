<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Hospital.Views.SearchDoctorsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Spacing="10">
            <TextBlock Text="Search Doctors" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBox x:Name="SearchTextBox" PlaceholderText="Enter department name" 
                     Margin="0,5,0,10" 
                     TextChanged="SearchTextBox_TextChanged"/>
        </StackPanel>

        <ListView Grid.Row="1" x:Name="DoctorsListView" Margin="0,20,0,0" 
          ItemsSource="{x:Bind ViewModel.DoctorList, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Doctor image -->
                        <Border Grid.Column="0" Width="60" Height="60" 
                            CornerRadius="30" Margin="0,0,15,0"
                            Background="{ThemeResource SystemControlBackgroundBaseLowBrush}">
                            <Image>
                                <Image.Source>
                                    <BitmapImage UriSource="{Binding AvatarUrl, TargetNullValue='/Assets/default-profile.png', FallbackValue='/Assets/default-profile.png'}"/>
                                </Image.Source>
                            </Image>
                        </Border>

                        <!-- Doctor details -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="{Binding DoctorName}" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DepartmentName}" Opacity="0.7"/>
                            <TextBlock Text="{Binding PhoneNumber}" FontSize="12" Opacity="0.6"/>
                        </StackPanel>

                        <!-- Rating -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock VerticalAlignment="Center">
                                <Run Text="Rating: "/>
                                <Run Text="{Binding Rating}"/>
                                <Run Text="/5 â˜…"/>  
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
