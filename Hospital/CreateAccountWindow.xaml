<Window
    x:Class="Hospital.CreateAccountWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Create Account">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="250" Spacing="10">
            <TextBox x:Name="UsernameField" Header="Username" PlaceholderText="Enter username"/>
            <PasswordBox x:Name="PasswordField" Header="Password" PlaceholderText="Enter password"/>
			<TextBox x:Name="EmailTextBox" PlaceholderText="Enter your email" InputScope="EmailSmtpAddress" />
			<TextBox x:Name="NameTextBox" PlaceholderText="Enter your full name" />
			<CalendarDatePicker x:Name="BirthDateCalendarPicker" />
			<TextBox x:Name="CNPTextBox" PlaceholderText="Enter your CNP" MaxLength="13" InputScope="Number" />
			<Button x:Name="CreateAccountButton" Content="Create Account" Click="CreateAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
