<Page
    x:Class="Hospital.Views.RecommendationWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hospital.Views">

    <Grid Padding="20">
        <StackPanel Spacing="10" HorizontalAlignment="Center">

            <TextBlock Text="Patient Dashboard" FontSize="20" FontWeight="Bold" />

            <!-- Button to open the recommendation form -->
            <Button Content="Get Doctor Recommendation" Click="OpenRecommendationView_Click" />

            <!-- Display the recommended doctor -->
            <TextBlock x:Name="RecommendedDoctorTextBlock" Text="No recommendation yet" FontSize="16" Foreground="Green" Visibility="Collapsed"/>

        </StackPanel>
    </Grid>
</Page>

